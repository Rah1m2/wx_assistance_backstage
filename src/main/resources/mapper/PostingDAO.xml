<?xml version="1.0" encoding="UTF8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wx.main.DAO.PostingDAO">

    <select id="getPostingList" resultType="com.wx.main.POJO.Posting">
      select * from postings_info
    </select>

    <select id="getPostingListOrderByTime" resultType="com.wx.main.POJO.Posting">
        select * from postings_info order by last_reply_time DESC
    </select>

    <select id="getSortInfo" resultType="com.wx.main.POJO.Sort">
      select * from sort_info
    </select>

    <select id="getPostingBySortId" resultType="com.wx.main.POJO.Posting" parameterType="int">
        select * from postings_info where sort_id=#{sort_id}
    </select>

    <select id="getPostingByArticleId" resultType="com.wx.main.POJO.Posting" parameterType="int">
        select * from postings_info where article_id=#{article_id}
    </select>

    <select id="getPostingByUserOpenId" resultType="com.wx.main.POJO.Posting" parameterType="String">
        select * from postings_info where user_openid=#{user_openid}
    </select>

    <select id="getPostingById" resultType="com.wx.main.POJO.Posting" parameterType="int">
        select * from postings_info
            <where>
                <if test="sort_id != null">sort_id=#{sort_id}</if>
                <if test="article_id != null">article_id=#{article_id}</if>
                <if test="user_id != null">user_id=#{user_id}</if>
            </where>
    </select>

    <insert id="insertSinglePosting" parameterType="com.wx.main.POJO.Posting" useGeneratedKeys="true" keyColumn="article_id">
      <selectKey resultType="int" keyProperty="article_id" order="AFTER" >
        select LAST_INSERT_ID()
      </selectKey>
      insert into postings_info (article_id,article_title,article_content,article_image,sort_id,last_reply_time,user_openid) values(#{article_id},#{article_title},#{article_content},#{article_image},#{sort_id},#{last_reply_time},#{user_openid})
    </insert>

    <update id="deleteSinglePosting" parameterType="String">
        delete from postings_info where article_id=#{article_id}
    </update>

    <select id="getCurrentUserPstCount" parameterType="String" resultType="int" >
        select COUNT(*) from postings_info where user_openid=#{user_openid}
    </select>
    <!--<delete id="deleteSingleUser">-->
    <!--delete from user_info where user_account=#{user_account}-->
    <!--</delete>-->

    <!--<update id="updateSingleUser">-->
    <!--update user_info set user_password=#{user_password} where user_account=#{user_account}-->
    <!--</update>-->

    <update id="updateLastReplyTimeByArticleId"  parameterType="String">
        update postings_info set last_reply_time=now() where article_id=#{article_id}
    </update>
</mapper>