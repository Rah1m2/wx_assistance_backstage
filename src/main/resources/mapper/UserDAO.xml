<?xml version="1.0" encoding="UTF8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wx.main.DAO.UserDAO">

    <select id="getUserList" resultType="com.wx.main.POJO.User">
      select * from user_info
    </select>

    <!--这是一个resultMap单元，名字为自定义，类型为User-->
    <resultMap id="userMap" type="com.wx.main.POJO.User">
      <!--<result column="id" property="user_id"/>-->
    </resultMap>
    <!--相当于在这个实例中引用刚刚定义的resultMap-->
    <select id="getUserByAccount" resultMap="userMap" parameterType="String">
      select * from user_info where user_openid = #{user_openid}
    </select>

    <insert id="insertSingleUser" parameterType="com.wx.main.POJO.User">
      insert into user_info (user_openid,user_name,user_gender,user_language,user_country,user_avatarUrl) values(#{user_openid},#{user_name},#{user_gender},#{user_language},#{user_country},#{user_avatarUrl})
  </insert>

    <insert id="insertSingleAStuInfo" parameterType="com.wx.main.POJO.Student">
        insert into a_student_info (user_mission_id, sort_id, user_openid, user_score, contact_detail) value (#{user_mission_id},#{sort_id},#{user_openid},#{user_score},#{contact_detail})
    </insert>

    <delete id="deleteOneStuInfoById" parameterType="java.lang.String">
        delete from a_student_info where user_openid=#{user_openid}
    </delete>

    <select id="identifyUserByOpenid" parameterType="java.lang.String" resultType="int">
        select COUNT(user_openid) from a_student_info where user_openid=#{user_openid}
    </select>

    <update id="updateUserInfoByOpenid">
        update user_info set user_name=#{nickName},user_gender=#{gender},user_language=#{language},user_country=#{country},user_avatarUrl=#{avatarUrl} where user_openid=#{openid}
    </update>

    <!--<delete id="deleteSingleUser">-->
      <!--delete from user_info where user_account=#{user_account}-->
    <!--</delete>-->

    <!--<update id="updateSingleUser">-->
        <!--update user_info set user_password=#{user_password} where user_account=#{user_account}-->
    <!--</update>-->
</mapper>